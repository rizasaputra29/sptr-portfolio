generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  tags        String[]
  link        String?
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model Experience {
  id          String   @id @default(cuid())
  role        String
  company     String
  period      String
  description String
  createdAt   DateTime @default(now())
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SiteStats {
  id    String @id @default(cuid())
  key   String @unique
  value String
  label String
}
